{
  "name": "automerge-pro",
  "version": "1.0.0",
  "description": "AI-powered GitHub Marketplace app for automated pull request reviews and merging",
  "private": true,
  "workspaces": [
    "apps/backend",
    "apps/frontend",
    "packages/shared",
    "marketing-site"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "start": "turbo run start",
    "server": "node server.js",
    "server:dev": "nodemon server.js",
    "lint": "turbo run lint",
    "type-check": "turbo run type-check",
    "test": "turbo run test",
    "clean": "turbo run clean",
    "db:generate": "cd apps/backend && npm run db:generate",
    "db:migrate": "cd apps/backend && npm run db:migrate",
    "db:studio": "cd apps/backend && npm run db:studio",
    "generate-dev-license": "node scripts/dev-license-cli.js",
    "generate-license": "node scripts/dev-license-cli.js",
    "build:lambda": "./create-lambda-zip.sh",
    "test:lambda": "node test-lambda-package.js"
  },
  "dependencies": {
    "@octokit/auth-app": "^8.0.2",
    "@octokit/rest": "^20.0.2",
    "@vendia/serverless-express": "^4.12.6",
    "aws-sdk": "^2.1691.0",
    "express": "^4.18.0",
    "express-session": "^1.17.3",
    "js-yaml": "^4.1.0",
    "nodemon": "^3.0.0",
    "probot": "^13.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.8.0",
    "eslint": "^8.50.0",
    "prettier": "^3.0.3",
    "turbo": "^1.13.4",
    "typescript": "^5.2.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}