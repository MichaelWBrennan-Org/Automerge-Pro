{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**"]
    },
    "start": {
      "cache": false,
      "persistent": true
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "lint": {
      "outputs": []
    },
    "type-check": {
      "outputs": []
    },
    "test": {
      "outputs": ["coverage/**"]
    },
    "merge": {
      "cache": true,
      "outputs": ["apps/backend/dist/**"],
      "inputs": [
        "apps/backend/src/services/merge-orchestrator.ts",
        "apps/backend/src/services/llm-hunk-resolver.ts",
        "apps/backend/src/services/semantic-hunk-resolver.ts",
        "apps/backend/src/services/verification-service.ts",
        "packages/shared/**"
      ]
    },
    "clean": {
      "cache": false
    }
  }
}